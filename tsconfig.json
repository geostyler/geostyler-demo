{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["es6", "dom", "ES2022"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "build",
    "config",
    "coverage",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/**/*.test.tsx",
    "**.config.js",
    "node_modules/**/*"
  ]
}
